@model Bill
@{
    Layout = "~/Views/Shared/_DashLayout.cshtml";
}

    

<div class="container" style="background: white;border-radius:5px">
<br />
@if (string.IsNullOrEmpty(ViewBag.OutOfStockMessage))
{
    <div class="alert alert-warning">
        @ViewBag.OutOfStockMessage
    </div>
}
<h2>Order Detail</h2>
    <div class="row">
        <div class="col-md-6">
            <br />
            <div class="form-group">
                <label for="BillId">Order ID</label>
                <input type="text" id="BillId" " name="BillId" value="@Model.BillId" readonly class="form-control" />
            </div>

            <div class="form-group">
                <label for="Name">Customer Name</label>
                <input type="text" id="Name" name="Name" value="@Model.Email" readonly class="form-control" />
            </div>

            <div class="form-group">
                <label for="Address">Address</label>
                <input type="text" id="Name" name="Address" value="@Model.ShippingAddress" readonly class="form-control" />
            </div>

        </div>
        <div class="col-md-6">
            <br />
            <div class="form-group">
                <label for="Products">Products</label>
                <input type="text" id="Products" name="Products" value="@string.Join(", ", @Model.BillDetails.Select(bd => bd.Product.ProductName))" readonly class="form-control" />
            </div>

            <div class="form-group">
                <label for="Price">Price</label>
                <input type="text" id="Price" name="Price" value="@Model.TotalPrice,000VNĐ" readonly class="form-control" />
            </div>
        </div>



        <div style="margin-right: 10px">
            <a href="/Seller/Delete?billId=@Model.BillId" class="btn btn-secondary" >Order Refund</a>
            <a href="/Seller/ViewAll" class="btn btn-primary">Back</a>
        </div><br />
    </div>
</div>



