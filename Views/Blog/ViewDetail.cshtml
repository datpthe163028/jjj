@model Blog

@{
    Layout = "~/Views/Shared/_DashLayout.cshtml";
}

@if (Model == null)
{
    <div class="container">
        <div class="alert alert-info mt-3">
            No blogs found.
        </div>
    </div>
}
else
{
    <div class="container" style="background: white;border-radius:5px">
        <div class="row">
            <div class="col-md-6"><br />
                <div class="form-group">
                    <label for="HomeStatus">Home Status</label>
                    <input type="text" id="HomeStatus" name="HomeStatus" value="@(Model.HomeStatus == true ? "Enable" : "Disable")" readonly class="form-control" />
                </div>

                <div class="form-group">
                    <label for="DateUp">Date Up</label>
                    <input type="text" id="Date Up" name="Date Up" value="@Model.DateUp" readonly class="form-control" />
                </div>

                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name" value="@Model.name" readonly class="form-control" />
                </div>

                <div class="form-group">
                    <label for="isCollection">Is Collection</label>
                    <input type="text" id="isCollection" name="isCollection" value="@Model.isCollection.ToString()" readonly class="form-control" />
                </div>

                <div class="form-group">
                    <label for="content">Content</label>
                    <textarea id="content" name="content" readonly class="form-control">@Model.content</textarea>
                </div>

                <div class="form-group">
                    <label for="content2">Second Content</label>
                    <textarea id="content2" name="content2" readonly class="form-control">@Model.content2</textarea>
                </div>
            </div>

            <div class="col-md-6"><br />
                <h3>ImageBlogs:</h3>
                @if (Model.ImageBlogs != null && Model.ImageBlogs.Count > 0)
                {
                    <div class="row">
                        @foreach (var imageBlog in Model.ImageBlogs)
                        {
                            <div class="col-md-6" style="margin-bottom: 20px">
                                <img src="@imageBlog.ImageURL" alt="Image" class="img-fluid" style="width: 800px; height:100px">
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p>No ImageBlogs found.</p>
                }
            </div>
        </div>

    </div>
}

